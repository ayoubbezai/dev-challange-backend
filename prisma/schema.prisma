    generator client {
      provider = "prisma-client-js"
    }

    datasource db {
      provider = "mongodb"
      url      = env("DATABASE_URL")

    }

model User {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  full_name  String
  role       String
  nick_name  String   @unique
  email      String   @unique
  password   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Challenge {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  subTitle    String?
  description String
  type        String
  difficulty  String?
  points      Int
  flagHash    String?
  hints       Json?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
